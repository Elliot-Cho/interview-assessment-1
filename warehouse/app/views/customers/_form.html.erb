<%= form_with model: @customer do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @customer.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :charge_type %><br>
    <% Customer.charge_types.each_key do |charge_type| %>
      <%= form.radio_button :charge_type, charge_type == 'volume' ? 0 : 1, checked: @customer.charge_type == charge_type %>
      <%= form.label charge_type.to_sym %>
    <% end%>
    <% @customer.errors.full_messages_for(:charge_type).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :charge_value %><br>
    <div>
      <%= form.text_field :charge_value %>
      (For volume, charge value is in dollars per volume. For value, charge value is in percentage of value)
    </div>
    <% @customer.errors.full_messages_for(:charge_value).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :flat_fee %><br>
    <%= form.text_field :flat_fee %>
    <% @customer.errors.full_messages_for(:flat_fee).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>